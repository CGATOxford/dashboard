<% content_for(:title) { "CGAT Dashboard" } %>

<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

<style type='text/css'>
#dc-switcher-next { padding-left: 5px; }
#dc-switcher-next-name, #dc-switcher-countdown { color: #ddd; }
#dc-switcher-pause-reset { padding-left: 5px; }
#dc-switcher-controls { float: right; margin-right: 10px }
#dc-switcher-stopper:hover, #dc-switcher-next:hover { cursor: pointer; cursor: hand;}
.switcher-text { color: white; font-weight: bold }
</style>

<div id='dc-switcher-controls'>
  <dashboard-name-template>
    <span class='switcher-text'>Next:</span>
    <em>&ensp;$nextName&ensp;</em>
    <span class='switcher-text'>in&ensp;</span>
  </dashboard-name-template>
</div>

<div class="gridster highcontrast">
  <h1 class="header">CGAT Dashboard - Science</h1>
  <ul>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/logo.png"></div>
    </li>

    <li data-row="1" data-col="2" data-sizex="2" data-sizey="1">
      <div 
        data-id="papers_published" 
        data-view="SeriesGraph" 
        data-renderer="bar"
        data-colors="#fff #888" 
        data-title="Papers published" 
        data-subtitle="Papers published" 
        data-padding-top="0.35"
        class="widget-graph widget-graph-large-change-rate">
      </div>
    </li>

    <li data-row="2" data-col="1" data-sizex="3" data-sizey="2">
      <div 
        data-id="topcited_papers" 
        data-view="List" 
	data-title="Most cited CGAT papers (Google Scholar)"
      </div>
    </li>

    <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">
      <div 
        data-id="twitter_user_followers" 
        data-view="Number" 
	data-title="Twitter followers"
      </div>
    </li>

    <li data-row="2" data-col="4" data-sizex="1" data-sizey="1">
      <div 
        data-id="github_user_repos_forks" 
        data-view="List" 
	data-title="Github forks"
      </div>
    </li>

    <li data-row="3" data-col="4" data-sizex="1" data-sizey="1">
      <div 
        data-id="github_user_repos_watchers" 
        data-view="List" 
	data-title="Github watchers"
      </div>
    </li>

  </ul>

</div>

