<% content_for(:title) { "CGAT Dashboard - Projects" } %>
<div class="gridster highcontrast">
  <h1 class="header">CGAT Dashboard - Projects</h1>
  <ul>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div 
        data-id="project_emails" 
        data-view="NestedList"
        data-title="Project Communication">
	data-moreinfo="Emails sent to project list. Red: no email sent in last 31 days."
      </div>
    </li>

   <li data-row="2" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="diskspace"
      data-view="Number"
      data-title="Storage status"
      data-suffix="Tb"
      data-moreinfo="available disk space"
      </div>
    </li>

    <li data-row="1" data-col="4" data-sizex="3" data-sizey="2">
      <div 
        data-id="project_diskusage" 
        data-view="List" 
	data-title="Disk usage per project - (Tb)"
	data-moreinfo="Top 10 projects shown"
      </div>
    </li>

    <li data-row=1" data-col="3" data-sizex="1" data-sizey="1">
      <div 
        data-id="queues" 
        data-view="NumberPair" 
	data-title="Cluster status"
	data-moreinfo="jobs running/queuing"
      </div>
    </li>

  </ul>
  <footer data-id="meta_stats" data-view="Meta"></footer>
</div>
