<% content_for(:title) { "CGAT Dashboard" } %>

<div class="gridster highcontrast">
  <h1 class="header">CGAT Dashboard - Cluster</h1>
  <ul>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="diskspace"
      data-view="Number"
      data-title="Storage status"
      data-suffix="Tb"
      data-moreinfo="available disk space"
      </div>
    </li>

    <li data-row=1" data-col="2" data-sizex="1" data-sizey="1">
      <div 
        data-id="queues" 
        data-view="NumberPair" 
	data-title="Cluster status"
	data-moreinfo="jobs running/queuing"
      </div>
    </li>

   <li data-row="2" data-col="1" data-sizex="2" data-sizey="2">
       <div
         data-id="queue_user_table"
	 data-view="Table"
         data-title="Cluster users"
	 data-moreinfo="jobs/cores running/queuing">
       </div>
    </li>

    <li data-row="4" data-col="1" data-sizex="2" data-sizey="2">
      <div 
        data-id="project_diskusage" 
        data-view="Pie" 
	data-title="Disk usage"
      </div>
    </li>

    <li data-row="1" data-col="3" data-sizex="2" data-sizey="4">
       <div data-id="cluster_cpu_usage"
       data-view="HotProgressBars"
       data-title="CPU Usage"
       data-zebra="1">
       </div>
    </li>

    <li data-row="1" data-col="5" data-sizex="2" data-sizey="4">
       <div data-id="cluster_mem_usage"
       data-view="HotProgressBars"
       data-title="Memory Usage">
       </div>
    </li>

  </ul>

</div>
