<% content_for(:title) { "CGAT Dashboard" } %>

<script type='text/javascript'>
 $(function() {
   Dashing.gridsterLayout('[{"col":1,"row":1,"size_x":1,"size_y":1},{"col":1,"row":3,"size_x":1,"size_y":1},{"col":1,"row":2,"size_x":1,"size_y":1},{"col":2,"row":1,"size_x":2,"size_y":4},{"col":4,"row":1,"size_x":2,"size_y":4}]')
 });
 </script>


<div class="gridster highcontrast">
  <h1 class="header">CGAT Dashboard - Cluster</h1>
  <ul>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/logo.png"></div>
    </li>

    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="diskspace"
      data-view="Number"
      data-title="Storage status"
      data-suffix="Tb"
      data-moreinfo="available disk space"
      </div>
    </li>

    <li data-row=3" data-col="1" data-sizex="1" data-sizey="1">
      <div 
        data-id="queues" 
        data-view="NumberPair" 
	data-title="Cluster status"
	data-moreinfo="jobs running/queuing"
      </div>
    </li>

    <li data-row="1" data-col="2" data-sizex="2" data-sizey="4">
       <div data-id="cluster_cpu_usage"
       data-view="HotProgressBars"
       data-title="CPU Usage"
       data-zebra="1">
       </div>
    </li>

    <li data-row="1" data-col="4" data-sizex="2" data-sizey="4">
       <div data-id="cluster_mem_usage"
       data-view="HotProgressBars"
       data-title="Memory Usage">
       </div>
    </li>

  </ul>

</div>
